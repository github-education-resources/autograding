{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es6", "es2015", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
